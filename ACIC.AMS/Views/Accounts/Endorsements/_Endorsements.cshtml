        </div>
        <div class="portlet-body" style="height:220px; overflow-y:scroll;">
            <div class="row hide endorsement-list-content">
                <table class="table table-striped table-hover" id="dTableEndorsements">
                    <thead>
                        <tr>
                            <th> Effective </th>
                            <th> Description </th>
                            <th> Action </th>
                            <th> Year </th>
                            <th> Make </th>
                            <th> VIN </th>
                            <th> PD Value </th>
                            <th> Surcharge </th>
                            <th> AL </th>
                            <th> MTC </th>
                            <th> APD </th>
                            <th> Broker Fees </th>
                            <th> Endt Fees </th>
                            <th> Total Amount </th>
                            <th> Status</th>
                            <th> Variance</th>
                            <th> &nbsp; </th>
                        </tr>
                    </thead>
                    <tbody id="tbodyEndorsementList">
                    </tbody>
                </table>
            </div>
            <div class="row" id="endorsementsPreloader">
                <div class="col-md-12 text-center" style="padding-top:75px;">
                    <img src="~/assets/images/preloader.gif" />
                </div>
            </div>


        </div>
    </div>
</div>

