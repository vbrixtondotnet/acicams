<div class="col-md-12">
    <div class="portlet box white" style="min-height:239px;">
        <div class="portlet-title">
            <div class="caption">
                ENDORSEMENTS
            </div>
            <div class="tools">
                <input type="text" style="margin-right:10px; width: 200px; color:#508edb; outline:none;border:none;" id="txtSearchEndorsement"/>
                <select style="margin-right:10px; color:#508edb;outline:none;" id="slcEndorsementTypeFilter">
                    <option value="all">Show All</option>
                    <option value="vehicle">Vehicles</option>
                    <option value="driver">Drivers</option>
                    <option value="additional_insured">Additional Insureds</option>
                    <option value="loss_payee">Loss Payees</option>
                    <option value="wos">WOS</option>
                </select>
                <button type="button" class="btn btn-info btn-sm" id="btnAddEndorsement" title="Add Endorsement" style="margin-right:5px;"><i class="fa fa-plus"></i></button>
                <button type="button" class="btn btn-success btn-sm" id="btnExportEndorsements" title="Export to Excel" style="color:white !important"><i class="fa fa-file-excel-o"></i></button>
