<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="~/assets/images/Logo.PNG" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content" id="loginContent">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" action="index.html" method="post">
            <h3 class="form-title font-green">Sign In</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> Enter any username and password. </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" id="txtUserName" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" id="txtPassword" />
            </div>
            <div class="form-group text-right hide" id="login-error">
                <label class="control-label text-danger"><small>Invalid User Name or Password!</small></label>
            </div>
            <div class="form-actions text-right">
                <button type="button" class="btn green uppercase" id="btnLogin">Login</button>
            </div>

        </form>
       

    </div>
    <div class="copyright"> 2020 © ACIC AMS BETA</div>
  
    <script src="~/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/assets/global/scripts/app.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/login.min.js" type="text/javascript"></script>

    <script>
        $("#btnLogin").click(function () {
            $("#login-error").addClass('hide');
            var userName = $("#txtUserName").val();
            var password = $("#txtPassword").val();
            App.blockUI({
                target: "#loginContent", message: "<span>Signing In..</span>",
                iconOnly: false
            });
            Authentication.signIn(userName, password, function () {
                $("#login-error").removeClass('hide');
                App.unblockUI("#loginContent");

            });
        });

    </script>
</body>

